{
	"compilerOptions": {
		"target": "ES2015",
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build/",
        "sourceMap": true,
        "experimentalDecorators": true,
        "declaration": true,
        "pretty": true,
        "declarationDir": "./declarations/"
    },
    "include": [
        "*.ts",
        "example/**/*.ts",
        "test/**/*.ts",
        "@types/**/*.ts"
    ]
}