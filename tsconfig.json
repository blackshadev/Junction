{
	"compilerOptions": {
        "watch": true,
		"target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build/",
        "sourceMap": true,
        "experimentalDecorators": true,
        "declaration": true,
        "pretty": true,
        "rootDir": "./src/",
        "declarationDir": "./declarations/",
        "alwaysStrict": true
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types/**/*.ts"
    ]
}